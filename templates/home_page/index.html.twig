{% extends 'base.html.twig' %}

{% block title %}Escolinha de Futebol Davis{% endblock %}

{% block body %}
    <div class="container">
        <div class="div-escolinha-home p-3 mt-4 text-white bg-opacity-50 text-info-black rounded-3">
            <h4>Escolinha Davis</h4>
        </div>
    </div>

    <div class="container">
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="/assets/images/davis-carrossel-1.JPEG" class="d-block w-100" alt="...">
                </div>
                {% for i in 2 .. 4 %}
                    <div class="carousel-item">
                        <img src="/assets/images/davis-carrossel-{{ i }}.JPEG" class="d-block w-100" alt="...">
                    </div>
                {% endfor %}
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleFade" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

    <div class="container py-4">
        <div class="row align-items-md-stretch">
            <div class="col-md-6">
                <div class="div-aluno-home h-100 p-5 rounded-3">
                    <h2>Alunos</h2>
                    <p>Ambiente reservado para cadastrar, alterar e visualizar alunos</p>
                    <a class="btn btn-dark" href="/aluno" role="button">Ir para Alunos</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="h-100 p-5 bg-body-tertiary border rounded-3">
                    <h2>Ata de Presen√ßa</h2>
                    <p>Ambiente para registrar os alunos presentes em cada dia</p>
                    <a class="btn btn-outline-secondary" href="/ata" role="button">Ir para Ata</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

